FROM busybox:latest@sha256:ab33eacc8251e3807b85bb6dba570e4698c3998eca6f0fc2ccb60575a563ea74 AS build
RUN touch /config.yaml

FROM gcr.io/distroless/base-debian12:debug@sha256:e1cd9d641c6c64ea4564faaf458c3186fde6ee2e3617448c013c923fc724fc0f
ENV AUTOCERT_DIR=/data/autocert
WORKDIR /pomerium
COPY pomerium /bin/
COPY --from=build /config.yaml /pomerium/config.yaml
ENTRYPOINT [ "/bin/pomerium" ]
CMD ["-config","/pomerium/config.yaml"]
