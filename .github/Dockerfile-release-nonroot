FROM busybox:latest@sha256:6d9ac9237a84afe1516540f40a0fafdc86859b2141954b4d643af7066d598b74 as build
RUN touch /config.yaml

FROM gcr.io/distroless/base-debian12:nonroot@sha256:c1e97afc54bf72b6f60eb91ea71a800ad88729e4850e819b0d55358f0e2c258c
ENV AUTOCERT_DIR /data/autocert
WORKDIR /pomerium
COPY pomerium /bin/
COPY --from=build /config.yaml /pomerium/config.yaml
ENTRYPOINT [ "/bin/pomerium" ]
CMD ["-config","/pomerium/config.yaml"]
